<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>
    <style name="AppTheme.WhiteAccent" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/white</item> <!-- Whatever color you want-->
    </style>
    <style name="EditTextStyle" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textColor">@color/text_color1</item>
        <item name="android:background">@drawable/editext_bg</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
