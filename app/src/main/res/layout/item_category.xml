<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.zoho.app.custom.RobotoMediumTextView
        android:id="@+id/tv_cat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/_5sdp"
        android:text="Title"
        android:textColor="@color/text_color1"
        android:textSize="@dimen/_12sdp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cat_title" />

    <com.zoho.app.custom.RobotoMediumTextView
        android:id="@+id/textView_more"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_5sdp"
        android:text="@string/show_more"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_12sdp" />

    <ImageView
        android:id="@+id/imageView_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arow_right"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageView_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:rotation="180"
        android:src="@drawable/arow_right"
        android:visibility="gone" />
</RelativeLayout>